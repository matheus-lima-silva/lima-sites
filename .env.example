# Configurações do Banco de Dados
# Formato: postgresql+asyncpg://usuario:senha@host:porta/nome_banco
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/lima_db

# Configurações de Segurança
SECRET_KEY=sua_chave_secreta_aqui
DEBUG=False
ACCESS_TOKEN_EXPIRE_DAYS=30

# Configurações do WhatsApp Cloud API
WHATSAPP_API_VERSION=v17.0
WHATSAPP_PHONE_NUMBER_ID=seu_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=seu_business_account_id
WHATSAPP_ACCESS_TOKEN=seu_access_token
WHATSAPP_VERIFY_TOKEN=lima-whatsapp-token
WHATSAPP_APP_SECRET=seu_app_secret
WHATSAPP_WEBHOOK_URL=https://seu-dominio.com/auth/whatsapp/webhook

# Configurações de Serviços de IA
# Opções para AI_SERVICE: openai, gemini, none
AI_SERVICE=none
OPENAI_API_KEY=sua_chave_api_openai
OPENAI_MODEL=gpt-3.5-turbo
GEMINI_API_KEY=sua_chave_api_gemini